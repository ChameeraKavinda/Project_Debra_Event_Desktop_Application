@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Debra Event</title>
    <style>
        .text-center {
            background-color: rgb(255, 232, 232);
               /*background-image: url(img/234.PNG);
             background-size: cover;*/
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 80vh; 
            text-align: center;
            padding-down:50px;
        }
        .text-center h1 {
            font-size: 25px;
            font-weight: bold;

        }
        .text-center button {
            color: black;
            background-color: palevioletred;
            box-shadow: white;
            font-size: 25px;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 25px;
        }
        .text-center button:hover{
            background-color:aqua;
        }
        .text-center button a {
            text-decoration: none;
            color: black;
            font-weight: bold;
            font-size: 20px;
        }

        /* Page Navbar */
        nav {
            background: #ca60c5;
            padding: 0 20px;
        }

        .nav-container {
            list-style: none;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo-container {
            flex: 0 0 auto;
        }

        .logo {
            color: aliceblue;
            padding: 20px;
            font-size: 30px;
        }

        .logo span {
            color: rgb(255, 166, 0);
        }

        .navbar {
            display: flex;
            justify-content: flex-end;
            flex: 1;
        }

        .navbar li {
            position: relative;
        }

        .navbar li a {
            display: block;
            padding: 20px 25px;
            color: aliceblue;
            text-decoration: none;
            text-align: center;
            font-size: 20px;
        }

        .navbar li a:hover, .navbar li:hover > a {
            background: rgb(22, 122, 142);
            color: orange;
        }

        .navbar li:hover ul.dropdown {
            display: block;
        }
    </style>
</head>
<body>
    <nav>
        <ul class="nav-container">
            <li class="logo-container">
                <h1 class="logo">Debra <span>Events</span></h1>
            </li>
            <div class="navbar">
                <li><a href="home.html">Home</a></li>
                <li><a href="gallery.html">Privacy</a></li>
                <li><a href="#about_us_container">Help</a></li>
            </div>
        </ul>
    </nav>

    <div class="text-center">
        <h1 class="display-4">Welcome To Debra Event Management</h1>
        <button><a href="/PartnerLogin">User Login</a></button>
    </div>
</body>
</html>
