@page
@model WebClient.Pages.ItemsModel
@{
}
<body>
    <a asp-page="AddItem">Add New</a>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-page="EditItems"asp-route-id="@item.Id">Edit</a>
                </td>
                
               
            </tr>
        }
    </table>
</body>
