@page
@model WebClient.Pages.EditItemsModel
@{
}

<form method="post">
    <table>
        <tr>
            <td>Id</td>
            <td><input type="number" readonly asp-for="item.Id"/></td>
        </tr>
        <tr>
            <td>Name</td>
            <td><input type="text"asp-for="item.Name"/></td>
        </tr>
         <tr>
            <td>Price</td>
             <td><input type="numbers"asp-for="item.Price"/></td>
        </tr>
        <tr>
            <td>Stock</td>
             <td><input type="numbers"asp-for="item.Stock"/></td>
        </tr>
         <tr>
            <td>Description</td>
             <td><textarea cols="20" rows="10" asp-for="item.Description"/></textarea></td>
        </tr>
        <tr>
        <td><input type="submit" name="btnUpdate"value="Update" asp-page-handler="Update"/></td>
             <td><input type="submit" id="btnDelete"value="Delete"asp-page-handler="Delete"/></td>
        </tr>
    </table>
</form>
